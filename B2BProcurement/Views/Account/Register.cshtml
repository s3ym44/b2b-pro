@model B2BProcurement.Controllers.RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - B2B Procurement</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --navy-900: #071019;
            --navy-800: #0d2137;
            --navy-700: #132d46;
            --navy-600: #1e3a5f;
            --green-500: #10b981;
            --green-400: #34d399;
            --green-300: #6ee7b7;
            --gradient-green: linear-gradient(135deg, #10b981 0%, #34d399 100%);
            --gradient-navy: linear-gradient(135deg, #071019 0%, #0d2137 100%);
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background: var(--gradient-navy);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
            position: relative;
            overflow-x: hidden;
        }
        
        /* Background shapes */
        body::before {
            content: '';
            position: fixed;
            width: 500px;
            height: 500px;
            background: var(--green-500);
            border-radius: 50%;
            top: -200px;
            right: -200px;
            opacity: 0.08;
            z-index: 0;
        }
        
        body::after {
            content: '';
            position: fixed;
            width: 400px;
            height: 400px;
            background: var(--green-400);
            border-radius: 50%;
            bottom: -150px;
            left: -150px;
            opacity: 0.06;
            z-index: 0;
        }
        
        .register-container {
            width: 100%;
            max-width: 920px;
            background: #fff;
            border-radius: 24px;
            box-shadow: 0 25px 80px rgba(0, 0, 0, 0.3);
            padding: 48px;
            position: relative;
            z-index: 1;
            overflow: hidden;
        }
        
        .register-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: var(--gradient-green);
        }
        
        .register-header {
            text-align: center;
            margin-bottom: 40px;
        }
        
        .brand-logo {
            display: inline-flex;
            align-items: center;
            gap: 14px;
            margin-bottom: 16px;
            text-decoration: none;
        }
        
        .brand-icon-wrapper {
            width: 48px;
            height: 48px;
            background: var(--gradient-green);
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 8px 24px rgba(16, 185, 129, 0.3);
        }
        
        .brand-icon-wrapper i {
            font-size: 22px;
            color: #fff;
        }
        
        .brand-logo span {
            font-size: 24px;
            font-weight: 700;
            color: var(--navy-800);
        }
        
        .brand-logo .gradient {
            background: var(--gradient-green);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        .register-header p {
            color: #64748b;
            font-size: 15px;
        }
        
        /* Wizard Progress */
        .wizard-progress {
            display: flex;
            justify-content: center;
            gap: 80px;
            position: relative;
            margin-bottom: 48px;
        }
        
        .wizard-progress::before {
            content: '';
            position: absolute;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            width: 280px;
            height: 3px;
            background: #e2e8f0;
            z-index: 0;
            border-radius: 2px;
        }
        
        .progress-step {
            position: relative;
            z-index: 1;
            text-align: center;
        }
        
        .step-circle {
            width: 44px;
            height: 44px;
            background: #fff;
            border: 3px solid #e2e8f0;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 10px;
            font-weight: 700;
            font-size: 16px;
            color: #94a3b8;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        .progress-step.active .step-circle {
            border-color: var(--green-500);
            color: var(--green-500);
            box-shadow: 0 0 0 6px rgba(16, 185, 129, 0.15);
        }
        
        .progress-step.completed .step-circle {
            background: var(--gradient-green);
            border-color: var(--green-500);
            color: #fff;
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        }
        
        .step-label {
            font-size: 13px;
            color: #94a3b8;
            font-weight: 600;
        }
        
        .progress-step.active .step-label {
            color: var(--green-500);
        }
        
        .progress-step.completed .step-label {
            color: var(--navy-700);
        }
        
        /* Wizard Steps */
        .wizard-step {
            display: none;
            animation: fadeIn 0.4s ease;
        }
        
        .wizard-step.active {
            display: block;
        }
        
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(15px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .wizard-step h4 {
            font-size: 20px;
            font-weight: 700;
            color: var(--navy-800);
            margin-bottom: 28px;
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .wizard-step h4 i {
            color: var(--green-500);
        }
        
        .form-group {
            margin-bottom: 24px;
        }
        
        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: var(--navy-800);
            font-size: 14px;
        }
        
        .form-control, .form-select {
            width: 100%;
            padding: 14px 16px;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 15px;
            transition: all 0.3s ease;
            background: #f8fafc;
        }
        
        .form-control:focus, .form-select:focus {
            outline: none;
            border-color: var(--green-500);
            box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
            background: #fff;
        }
        
        /* Package Cards */
        .package-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 24px;
        }
        
        .package-card {
            border: 2px solid #e2e8f0;
            border-radius: 20px;
            padding: 28px;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            background: #fff;
        }
        
        .package-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: transparent;
            border-radius: 20px 20px 0 0;
            transition: background 0.3s ease;
        }
        
        .package-card:hover {
            border-color: var(--green-400);
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(16, 185, 129, 0.15);
        }
        
        .package-card:hover::before {
            background: var(--gradient-green);
        }
        
        .package-card.selected {
            border-color: var(--green-500);
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.03) 0%, rgba(52, 211, 153, 0.03) 100%);
            box-shadow: 0 15px 40px rgba(16, 185, 129, 0.2);
        }
        
        .package-card.selected::before {
            background: var(--gradient-green);
        }
        
        .package-card.selected::after {
            content: '\f00c';
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
            position: absolute;
            top: 16px;
            right: 16px;
            width: 28px;
            height: 28px;
            background: var(--gradient-green);
            border-radius: 50%;
            color: #fff;
            font-size: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .package-header {
            text-align: center;
            margin-bottom: 20px;
        }
        
        .package-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(52, 211, 153, 0.1) 100%);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 26px;
            color: var(--green-500);
            margin: 0 auto 16px;
        }
        
        .package-name {
            font-weight: 700;
            font-size: 18px;
            color: var(--navy-800);
            margin-bottom: 8px;
        }
        
        .package-price {
            font-size: 32px;
            font-weight: 800;
            color: var(--green-500);
        }
        
        .package-price small {
            font-size: 14px;
            font-weight: 500;
            color: #64748b;
        }
        
        .package-features {
            list-style: none;
            padding: 0;
            margin: 0;
            font-size: 14px;
        }
        
        .package-features li {
            margin-bottom: 12px;
            color: #475569;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .package-features li i {
            color: var(--green-500);
            font-size: 14px;
        }
        
        /* Navigation Buttons */
        .wizard-footer {
            display: flex;
            justify-content: space-between;
            margin-top: 40px;
            padding-top: 28px;
            border-top: 2px solid #f1f5f9;
        }
        
        .btn-prev {
            padding: 14px 28px;
            background: #fff;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            color: #64748b;
            font-weight: 600;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .btn-prev:hover {
            background: #f8fafc;
            color: var(--navy-800);
            border-color: #cbd5e1;
        }
        
        .btn-next, .btn-submit {
            padding: 14px 32px;
            background: var(--gradient-green);
            border: none;
            border-radius: 12px;
            color: #fff;
            font-weight: 600;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .btn-next:hover, .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 28px rgba(16, 185, 129, 0.35);
        }
        
        /* Validation */
        .text-danger {
            color: #dc2626 !important;
            font-size: 13px;
            margin-top: 6px;
            display: block;
        }
        
        .alert-danger {
            background: #fef2f2;
            border: 1px solid #fecaca;
            color: #dc2626;
            border-radius: 12px;
            padding: 16px 20px;
        }
        
        /* Terms checkbox */
        .terms-box {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.05) 0%, rgba(52, 211, 153, 0.05) 100%);
            border: 1px solid rgba(16, 185, 129, 0.2);
            border-radius: 14px;
            padding: 20px 24px;
            margin-top: 28px;
        }
        
        .form-check-input {
            width: 22px;
            height: 22px;
            margin-right: 12px;
            border: 2px solid #cbd5e1;
            cursor: pointer;
        }
        
        .form-check-input:checked {
            background-color: var(--green-500);
            border-color: var(--green-500);
        }
        
        .form-check-input:focus {
            box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.15);
        }
        
        .form-check-label {
            color: #475569;
            font-size: 15px;
        }
        
        .form-check-label a {
            color: var(--green-500);
            font-weight: 600;
            text-decoration: none;
        }
        
        .form-check-label a:hover {
            text-decoration: underline;
        }
        
        .login-link {
            text-align: center;
            margin-top: 28px;
            color: #64748b;
        }
        
        .login-link a {
            color: var(--green-500);
            font-weight: 600;
            text-decoration: none;
        }
        
        .login-link a:hover {
            color: var(--navy-800);
        }
        
        /* Responsive */
        @@media (max-width: 768px) {
            .register-container {
                padding: 32px 24px;
            }
            
            .package-grid {
                grid-template-columns: 1fr;
            }
            
            .wizard-progress {
                gap: 40px;
            }
            
            .wizard-progress::before {
                width: 160px;
            }
            
            .step-label {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-header">
            <a href="/" class="brand-logo">
                <div class="brand-icon-wrapper">
                    <i class="fas fa-link"></i>
                </div>
                <span>B2B<span class="gradient">Procurement</span></span>
            </a>
            <p>3 basit adımda hesabınızı oluşturun ve tedarik ağına katılın</p>
        </div>
        
        <div class="wizard-progress">
            <div class="progress-step active" data-step="1">
                <div class="step-circle">1</div>
                <div class="step-label">Firma</div>
            </div>
            <div class="progress-step" data-step="2">
                <div class="step-circle">2</div>
                <div class="step-label">Yönetici</div>
            </div>
            <div class="progress-step" data-step="3">
                <div class="step-circle">3</div>
                <div class="step-label">Paket</div>
            </div>
        </div>
        
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mb-4">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Lütfen formdaki hataları düzeltin.
                <div asp-validation-summary="All" class="small mt-2"></div>
            </div>
        }
        
        <form asp-action="Register" method="post" id="registerForm">
            @Html.AntiForgeryToken()
            
            <!-- Step 1: Firma Bilgileri -->
            <div class="wizard-step active" id="step1">
                <h4><i class="fas fa-building"></i> Firma Bilgileri</h4>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="CompanyName" class="form-label">Şirket Unvanı</label>
                            <input asp-for="CompanyName" class="form-control" placeholder="Örn: ABC Teknoloji A.Ş." />
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TaxNumber" class="form-label">Vergi Numarası</label>
                            <input asp-for="TaxNumber" class="form-control" placeholder="10 veya 11 haneli" maxlength="11" />
                            <span asp-validation-for="TaxNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SectorId" class="form-label">Sektör</label>
                            <select asp-for="SectorId" class="form-select" asp-items="@ViewBag.Sectors">
                                <option value="">Sektör seçiniz...</option>
                            </select>
                            <span asp-validation-for="SectorId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Step 2: Kullanıcı Bilgileri -->
            <div class="wizard-step" id="step2">
                <h4><i class="fas fa-user-tie"></i> Yönetici Bilgileri</h4>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FirstName" class="form-label">Ad</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Adınız" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="LastName" class="form-label">Soyad</label>
                            <input asp-for="LastName" class="form-control" placeholder="Soyadınız" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">E-posta</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="ornek@sirket.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Phone" class="form-label">Telefon</label>
                            <input asp-for="Phone" class="form-control" placeholder="0555 555 55 55" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">Şifre</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="En az 6 karakter" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Şifrenizi tekrar girin" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Step 3: Paket Seçimi -->
            <div class="wizard-step" id="step3">
                <h4 class="text-center justify-content-center"><i class="fas fa-gem"></i> Size Uygun Paketi Seçin</h4>
                
                <input type="hidden" asp-for="PackageId" />
                <span asp-validation-for="PackageId" class="text-danger text-center d-block mb-3"></span>
                
                <div class="package-grid">
                    @if (ViewBag.Packages != null)
                    {
                        foreach (var package in (List<B2BProcurement.Core.Entities.Package>)ViewBag.Packages)
                        {
                            var iconClass = package.Name.ToLower() switch {
                                var n when n.Contains("premium") => "fa-crown",
                                var n when n.Contains("orta") || n.Contains("standart") => "fa-rocket",
                                _ => "fa-leaf"
                            };
                            
                            <div class="package-card" onclick="selectPackage(@package.Id, this)">
                                <div class="package-header">
                                    <div class="package-icon">
                                        <i class="fas @iconClass"></i>
                                    </div>
                                    <h5 class="package-name">@package.Name</h5>
                                    <div class="package-price">@package.Price.ToString("C0") <small>/ay</small></div>
                                </div>
                                <ul class="package-features">
                                    <li><i class="fas fa-check-circle"></i> @(package.MaxRfqPerMonth == 0 ? "Sınırsız" : package.MaxRfqPerMonth.ToString()) RFQ / Ay</li>
                                    <li><i class="fas fa-check-circle"></i> @(package.MaxUsers == 0 ? "Sınırsız" : package.MaxUsers.ToString()) Kullanıcı</li>
                                    <li><i class="fas fa-check-circle"></i> @(package.MaxMaterials == 0 ? "Sınırsız" : package.MaxMaterials.ToString()) Malzeme</li>
                                    @if (package.CanUseSapIntegration)
                                    {
                                        <li><i class="fas fa-check-circle"></i> SAP Entegrasyonu</li>
                                    }
                                </ul>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="package-card" onclick="selectPackage(1, this)">
                            <div class="package-header">
                                <div class="package-icon"><i class="fas fa-leaf"></i></div>
                                <h5 class="package-name">Temel</h5>
                                <div class="package-price">₺500 <small>/ay</small></div>
                            </div>
                            <ul class="package-features">
                                <li><i class="fas fa-check-circle"></i> 10 RFQ / Ay</li>
                                <li><i class="fas fa-check-circle"></i> 2 Kullanıcı</li>
                            </ul>
                        </div>
                        <div class="package-card" onclick="selectPackage(2, this)">
                            <div class="package-header">
                                <div class="package-icon"><i class="fas fa-rocket"></i></div>
                                <h5 class="package-name">Orta</h5>
                                <div class="package-price">₺1.500 <small>/ay</small></div>
                            </div>
                            <ul class="package-features">
                                <li><i class="fas fa-check-circle"></i> 50 RFQ / Ay</li>
                                <li><i class="fas fa-check-circle"></i> 5 Kullanıcı</li>
                            </ul>
                        </div>
                        <div class="package-card" onclick="selectPackage(3, this)">
                            <div class="package-header">
                                <div class="package-icon"><i class="fas fa-crown"></i></div>
                                <h5 class="package-name">Premium</h5>
                                <div class="package-price">₺3.500 <small>/ay</small></div>
                            </div>
                            <ul class="package-features">
                                <li><i class="fas fa-check-circle"></i> Sınırsız RFQ</li>
                                <li><i class="fas fa-check-circle"></i> Sınırsız Kullanıcı</li>
                            </ul>
                        </div>
                    }
                </div>
                
                <div class="terms-box">
                    <div class="form-check d-flex align-items-center">
                        <input asp-for="AcceptTerms" class="form-check-input" type="checkbox" />
                        <label asp-for="AcceptTerms" class="form-check-label">
                            <a href="#">Kullanım Şartları</a> ve <a href="#">Gizlilik Politikası</a>'nı okudum, kabul ediyorum.
                        </label>
                    </div>
                    <span asp-validation-for="AcceptTerms" class="text-danger"></span>
                </div>
            </div>
            
            <div class="wizard-footer">
                <button type="button" class="btn btn-prev" id="prevBtn" style="display: none;">
                    <i class="fas fa-arrow-left"></i> Geri
                </button>
                <div class="ms-auto">
                    <button type="button" class="btn btn-next" id="nextBtn">
                        Devam Et <i class="fas fa-arrow-right"></i>
                    </button>
                    <button type="submit" class="btn btn-submit" id="submitBtn" style="display: none;">
                        Kaydı Tamamla <i class="fas fa-check"></i>
                    </button>
                </div>
            </div>
            
            <div class="login-link">
                <span>Zaten hesabınız var mı?</span>
                <a href="@Url.Action("Login")">Giriş Yapın</a>
            </div>
        </form>
    </div>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        $(document).ready(function() {
            let currentStep = 1;
            const totalSteps = 3;
            
            updateWizardState();
            
            $('#nextBtn').click(function() {
                if (validateStep(currentStep)) {
                    currentStep++;
                    updateWizardState();
                }
            });
            
            $('#prevBtn').click(function() {
                if (currentStep > 1) {
                    currentStep--;
                    updateWizardState();
                }
            });
            
            function updateWizardState() {
                $('.wizard-step').removeClass('active');
                $('#step' + currentStep).addClass('active');
                
                $('.progress-step').each(function(index) {
                    const stepNum = index + 1;
                    $(this).removeClass('active completed');
                    if (stepNum === currentStep) {
                        $(this).addClass('active');
                    } else if (stepNum < currentStep) {
                        $(this).addClass('completed');
                        $(this).find('.step-circle').html('<i class="fas fa-check"></i>');
                    } else {
                        $(this).find('.step-circle').text(stepNum);
                    }
                });
                
                $('#prevBtn').toggle(currentStep !== 1);
                $('#nextBtn').toggle(currentStep !== totalSteps);
                $('#submitBtn').toggle(currentStep === totalSteps);
            }
            
            function validateStep(step) {
                const form = $('#registerForm');
                
                if (step === 1) {
                    return form.validate().element('#CompanyName') &&
                           form.validate().element('#TaxNumber') &&
                           form.validate().element('#SectorId');
                } else if (step === 2) {
                    return form.validate().element('#FirstName') &&
                           form.validate().element('#LastName') &&
                           form.validate().element('#Email') &&
                           form.validate().element('#Password') &&
                           form.validate().element('#ConfirmPassword');
                }
                return true;
            }
            
            $('#registerForm').submit(function(e) {
                var packageId = $('#PackageId').val();
                var termsChecked = $('#AcceptTerms').is(':checked');
                
                if (!packageId) {
                    e.preventDefault();
                    $('[data-valmsg-for="PackageId"]').text('Lütfen bir paket seçin.');
                    return false;
                }
                
                if (!termsChecked) {
                    e.preventDefault();
                    $('[data-valmsg-for="AcceptTerms"]').text('Lütfen kullanım şartlarını kabul edin.');
                    return false;
                }
            });
        });
        
        function selectPackage(id, element) {
            $('.package-card').removeClass('selected');
            $(element).addClass('selected');
            $('#PackageId').val(id);
            $('[data-valmsg-for="PackageId"]').text('');
        }
    </script>
</body>
</html>
