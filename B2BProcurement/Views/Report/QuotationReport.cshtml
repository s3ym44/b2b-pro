@model B2BProcurement.Controllers.QuotationReportViewModel
@{
    ViewData["Title"] = "Teklif Raporu";
    ViewData["PageTitle"] = "Verilen Teklifler Raporu";
    ViewData["Breadcrumb"] = "Raporlar";
}

@section Styles {
<style>
    /* Filter Card */
    .filter-card {
        background: var(--white);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-md);
        padding: 24px;
        margin-bottom: 24px;
    }
    
    .filter-row {
        display: flex;
        gap: 16px;
        align-items: flex-end;
    }
    
    .filter-group {
        flex: 1;
    }
    
    .filter-group label {
        display: block;
        font-size: 12px;
        font-weight: 600;
        color: var(--gray-600);
        margin-bottom: 6px;
        text-transform: uppercase;
    }
    
    .filter-group input,
    .filter-group select {
        width: 100%;
        padding: 10px 14px;
        border: 1px solid var(--gray-200);
        border-radius: var(--radius-md);
    }
    
    /* KPI Cards */
    .kpi-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin-bottom: 24px;
    }
    
    .kpi-card {
        background: var(--white);
        border-radius: var(--radius-lg);
        padding: 24px;
        box-shadow: var(--shadow-sm);
        text-align: center;
    }
    
    .kpi-icon {
        width: 56px;
        height: 56px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        margin-bottom: 12px;
    }
    
    .kpi-icon.total { background: #EDE9FE; color: #7C3AED; }
    .kpi-icon.approved { background: #DCFCE7; color: #16A34A; }
    .kpi-icon.rejected { background: #FEE2E2; color: #DC2626; }
    .kpi-icon.rate { background: #DBEAFE; color: #2563EB; }
    
    .kpi-value {
        font-size: 28px;
        font-weight: 700;
        color: var(--gray-800);
    }
    
    .kpi-label {
        font-size: 13px;
        color: var(--gray-500);
    }
    
    /* Win Rate Card */
    .win-rate-card {
        background: linear-gradient(135deg, #10B981, #059669);
        border-radius: var(--radius-lg);
        padding: 32px;
        color: white;
        margin-bottom: 24px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .win-rate-info h4 {
        margin: 0 0 8px;
        font-weight: 600;
        opacity: 0.9;
    }
    
    .win-rate-value {
        font-size: 56px;
        font-weight: 700;
    }
    
    .win-rate-meta {
        text-align: right;
    }
    
    .win-rate-meta-item {
        margin-bottom: 12px;
    }
    
    .win-rate-meta-label {
        font-size: 12px;
        opacity: 0.7;
    }
    
    .win-rate-meta-value {
        font-size: 18px;
        font-weight: 600;
    }
    
    /* Chart Cards */
    .chart-row {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 24px;
        margin-bottom: 24px;
    }
    
    .chart-card {
        background: var(--white);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-md);
        overflow: hidden;
    }
    
    .chart-header {
        padding: 20px 24px;
        border-bottom: 1px solid var(--gray-100);
    }
    
    .chart-header h5 {
        margin: 0;
        font-weight: 600;
        color: var(--gray-800);
    }
    
    .chart-body {
        padding: 24px;
    }
    
    /* Amount Cards */
    .amount-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: 24px;
    }
    
    .amount-card {
        background: var(--white);
        border-radius: var(--radius-lg);
        padding: 24px;
        box-shadow: var(--shadow-sm);
        border-left: 4px solid var(--primary);
    }
    
    .amount-card.approved {
        border-color: #10B981;
    }
    
    .amount-label {
        font-size: 13px;
        color: var(--gray-500);
        margin-bottom: 8px;
    }
    
    .amount-value {
        font-size: 24px;
        font-weight: 700;
        color: var(--gray-800);
    }
    
    .amount-currency {
        font-size: 14px;
        color: var(--gray-500);
    }
</style>
}

<!-- Filter Card -->
<div class="filter-card">
    <form method="get">
        <div class="filter-row">
            <div class="filter-group">
                <label>Başlangıç Tarihi</label>
                <input type="date" name="StartDate" value="@Model.Filter.StartDate?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="filter-group">
                <label>Bitiş Tarihi</label>
                <input type="date" name="EndDate" value="@Model.Filter.EndDate?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="filter-group">
                <label>Durum</label>
                <select name="Status">
                    <option value="">Tümü</option>
                    <option value="0">Taslak</option>
                    <option value="1">Gönderildi</option>
                    <option value="2">Onaylandı</option>
                    <option value="3">Reddedildi</option>
                </select>
            </div>
            <div class="filter-group" style="flex: 0;">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-filter me-2"></i>Filtrele
                </button>
            </div>
        </div>
    </form>
</div>

<!-- Win Rate Card -->
<div class="win-rate-card">
    <div class="win-rate-info">
        <h4><i class="fas fa-trophy me-2"></i>Kazanma Oranı</h4>
        <div class="win-rate-value">%@Model.WinRate.ToString("N1")</div>
    </div>
    <div class="win-rate-meta">
        <div class="win-rate-meta-item">
            <div class="win-rate-meta-label">Gönderilen</div>
            <div class="win-rate-meta-value">@Model.SubmittedCount</div>
        </div>
        <div class="win-rate-meta-item">
            <div class="win-rate-meta-label">Kazanılan</div>
            <div class="win-rate-meta-value">@Model.ApprovedCount</div>
        </div>
    </div>
</div>

<!-- KPI Grid -->
<div class="kpi-grid">
    <div class="kpi-card">
        <div class="kpi-icon total"><i class="fas fa-file-invoice"></i></div>
        <div class="kpi-value">@Model.TotalQuotations</div>
        <div class="kpi-label">Toplam Teklif</div>
    </div>
    <div class="kpi-card">
        <div class="kpi-icon approved"><i class="fas fa-check-circle"></i></div>
        <div class="kpi-value">@Model.ApprovedCount</div>
        <div class="kpi-label">Onaylanan</div>
    </div>
    <div class="kpi-card">
        <div class="kpi-icon rejected"><i class="fas fa-times-circle"></i></div>
        <div class="kpi-value">@Model.RejectedCount</div>
        <div class="kpi-label">Reddedilen</div>
    </div>
    <div class="kpi-card">
        <div class="kpi-icon rate"><i class="fas fa-percentage"></i></div>
        <div class="kpi-value">%@Model.WinRate.ToString("N0")</div>
        <div class="kpi-label">Başarı Oranı</div>
    </div>
</div>

<!-- Amount Cards -->
<div class="amount-grid">
    <div class="amount-card">
        <div class="amount-label">Toplam Teklif Tutarı</div>
        <div class="amount-value">@Model.TotalAmount.ToString("N2") <span class="amount-currency">TRY</span></div>
    </div>
    <div class="amount-card approved">
        <div class="amount-label">Onaylanan Tutar</div>
        <div class="amount-value">@Model.ApprovedAmount.ToString("N2") <span class="amount-currency">TRY</span></div>
    </div>
</div>

<!-- Charts -->
<div class="chart-row">
    <!-- Monthly Amounts -->
    <div class="chart-card">
        <div class="chart-header">
            <h5><i class="fas fa-chart-area me-2"></i>Aylık Teklif Tutarları</h5>
        </div>
        <div class="chart-body">
            <canvas id="monthlyChart" height="300"></canvas>
        </div>
    </div>
    
    <!-- Status Distribution -->
    <div class="chart-card">
        <div class="chart-header">
            <h5><i class="fas fa-chart-pie me-2"></i>Durum Dağılımı</h5>
        </div>
        <div class="chart-body">
            <canvas id="statusChart" height="300"></canvas>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Monthly Amounts Chart
    const monthlyCtx = document.getElementById('monthlyChart').getContext('2d');
    new Chart(monthlyCtx, {
        type: 'line',
        data: {
            labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.MonthlyAmounts.Select(m => m.Label))),
            datasets: [{
                label: 'Toplam Tutar',
                data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.MonthlyAmounts.Select(m => m.TotalAmount))),
                borderColor: 'rgba(139, 92, 246, 1)',
                backgroundColor: 'rgba(139, 92, 246, 0.1)',
                fill: true,
                tension: 0.4
            }, {
                label: 'Onaylanan Tutar',
                data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.MonthlyAmounts.Select(m => m.ApprovedAmount))),
                borderColor: 'rgba(16, 185, 129, 1)',
                backgroundColor: 'rgba(16, 185, 129, 0.1)',
                fill: true,
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { position: 'bottom' }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        callback: value => value.toLocaleString('tr-TR') + ' ₺'
                    }
                }
            }
        }
    });
    
    // Status Distribution Chart
    const statusCtx = document.getElementById('statusChart').getContext('2d');
    new Chart(statusCtx, {
        type: 'doughnut',
        data: {
            labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.StatusDistribution.Select(s => s.Label))),
            datasets: [{
                data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.StatusDistribution.Select(s => s.Value))),
                backgroundColor: [
                    'rgba(107, 114, 128, 0.8)',
                    'rgba(59, 130, 246, 0.8)',
                    'rgba(16, 185, 129, 0.8)',
                    'rgba(239, 68, 68, 0.8)',
                    'rgba(245, 158, 11, 0.8)'
                ],
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: { usePointStyle: true, padding: 15 }
                }
            }
        }
    });
</script>
}
