@model B2BProcurement.Business.DTOs.User.LoginDto
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - B2B Procurement</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --navy-900: #071019;
            --navy-800: #0d2137;
            --navy-700: #132d46;
            --navy-600: #1e3a5f;
            --green-500: #10b981;
            --green-400: #34d399;
            --green-300: #6ee7b7;
            --gradient-green: linear-gradient(135deg, #10b981 0%, #34d399 100%);
            --gradient-navy: linear-gradient(135deg, #071019 0%, #0d2137 100%);
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            display: flex;
            background: var(--gradient-navy);
            overflow-x: hidden;
        }
        
        .login-container {
            display: flex;
            width: 100%;
            min-height: 100vh;
        }
        
        /* Left side - Branding */
        .login-branding {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 60px 80px;
            position: relative;
            overflow: hidden;
        }
        
        /* Animated background elements */
        .bg-shapes {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 0;
        }
        
        .shape {
            position: absolute;
            border-radius: 50%;
            opacity: 0.1;
        }
        
        .shape-1 {
            width: 400px;
            height: 400px;
            background: var(--green-500);
            top: -100px;
            right: -100px;
            animation: float 20s ease-in-out infinite;
        }
        
        .shape-2 {
            width: 300px;
            height: 300px;
            background: var(--green-400);
            bottom: 10%;
            left: -80px;
            animation: float 25s ease-in-out infinite reverse;
        }
        
        .shape-3 {
            width: 150px;
            height: 150px;
            background: var(--green-300);
            top: 40%;
            right: 20%;
            animation: float 15s ease-in-out infinite;
        }
        
        @@keyframes float {
            0%, 100% { transform: translate(0, 0) scale(1); }
            25% { transform: translate(20px, -30px) scale(1.05); }
            50% { transform: translate(-10px, 20px) scale(0.95); }
            75% { transform: translate(30px, 10px) scale(1.02); }
        }
        
        .brand-logo {
            display: flex;
            align-items: center;
            gap: 16px;
            margin-bottom: 56px;
            position: relative;
            z-index: 1;
        }
        
        .brand-icon-wrapper {
            width: 56px;
            height: 56px;
            background: var(--gradient-green);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 40px rgba(16, 185, 129, 0.3);
        }
        
        .brand-icon-wrapper i {
            font-size: 28px;
            color: #fff;
        }
        
        .brand-logo span {
            font-size: 28px;
            font-weight: 700;
            color: #fff;
        }
        
        .brand-logo .gradient {
            background: var(--gradient-green);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        .login-branding h1 {
            font-size: 52px;
            font-weight: 800;
            color: #fff;
            margin-bottom: 24px;
            line-height: 1.15;
            position: relative;
            z-index: 1;
        }
        
        .login-branding h1 .highlight {
            color: var(--green-400);
        }
        
        .login-branding p {
            font-size: 18px;
            color: rgba(255, 255, 255, 0.65);
            line-height: 1.8;
            max-width: 520px;
            position: relative;
            z-index: 1;
        }
        
        .features {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            margin-top: 56px;
            position: relative;
            z-index: 1;
        }
        
        .feature-item {
            display: flex;
            align-items: center;
            gap: 16px;
            padding: 20px 24px;
            background: rgba(255, 255, 255, 0.03);
            border-radius: 16px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.06);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        .feature-item:hover {
            background: rgba(16, 185, 129, 0.1);
            border-color: rgba(16, 185, 129, 0.3);
            transform: translateY(-4px);
        }
        
        .feature-icon {
            width: 52px;
            height: 52px;
            background: var(--gradient-green);
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-size: 22px;
            flex-shrink: 0;
            box-shadow: 0 8px 24px rgba(16, 185, 129, 0.25);
        }
        
        .feature-content h4 {
            color: #fff;
            font-weight: 600;
            font-size: 15px;
            margin-bottom: 4px;
        }
        
        .feature-content p {
            color: rgba(255, 255, 255, 0.5);
            font-size: 13px;
            margin: 0;
            line-height: 1.4;
        }
        
        /* Stats section */
        .stats {
            display: flex;
            gap: 48px;
            margin-top: 56px;
            padding-top: 32px;
            border-top: 1px solid rgba(255, 255, 255, 0.08);
            position: relative;
            z-index: 1;
        }
        
        .stat-item h3 {
            font-size: 36px;
            font-weight: 800;
            color: var(--green-400);
            margin-bottom: 4px;
        }
        
        .stat-item p {
            font-size: 14px;
            color: rgba(255, 255, 255, 0.5);
            margin: 0;
        }
        
        /* Right side - Login Form */
        .login-form-section {
            width: 540px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 48px;
            background: #fff;
            position: relative;
        }
        
        .login-form-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: var(--gradient-green);
        }
        
        .login-form-wrapper {
            width: 100%;
            max-width: 400px;
        }
        
        .login-header {
            text-align: center;
            margin-bottom: 40px;
        }
        
        .login-header .welcome-icon {
            width: 72px;
            height: 72px;
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(52, 211, 153, 0.1) 100%);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 24px;
        }
        
        .login-header .welcome-icon i {
            font-size: 32px;
            color: var(--green-500);
        }
        
        .login-header h2 {
            font-size: 28px;
            font-weight: 700;
            color: var(--navy-800);
            margin-bottom: 8px;
        }
        
        .login-header p {
            color: #64748b;
            font-size: 15px;
        }
        
        .form-group {
            margin-bottom: 24px;
        }
        
        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: var(--navy-800);
            font-size: 14px;
        }
        
        .form-control {
            width: 100%;
            padding: 14px 16px;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 15px;
            transition: all 0.3s ease;
            background: #f8fafc;
        }
        
        .form-control:focus {
            outline: none;
            border-color: var(--green-500);
            box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
            background: #fff;
        }
        
        .input-group {
            position: relative;
        }
        
        .input-group .form-control {
            padding-left: 52px;
        }
        
        .input-icon {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            font-size: 18px;
            transition: color 0.3s ease;
        }
        
        .input-group:focus-within .input-icon {
            color: var(--green-500);
        }
        
        .password-toggle {
            position: absolute;
            right: 16px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #94a3b8;
            cursor: pointer;
            font-size: 18px;
            transition: color 0.3s ease;
        }
        
        .password-toggle:hover {
            color: var(--green-500);
        }
        
        .form-options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 28px;
        }
        
        .remember-me {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .remember-me input[type="checkbox"] {
            width: 20px;
            height: 20px;
            accent-color: var(--green-500);
            cursor: pointer;
        }
        
        .remember-me label {
            font-size: 14px;
            color: #475569;
            cursor: pointer;
        }
        
        .forgot-password {
            font-size: 14px;
            color: var(--green-500);
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s ease;
        }
        
        .forgot-password:hover {
            color: var(--navy-800);
        }
        
        .btn-login {
            width: 100%;
            padding: 16px;
            background: var(--gradient-green);
            border: none;
            border-radius: 12px;
            color: #fff;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        
        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 32px rgba(16, 185, 129, 0.35);
        }
        
        .btn-login:active {
            transform: translateY(0);
        }
        
        .btn-login:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none;
        }
        
        .divider {
            display: flex;
            align-items: center;
            gap: 16px;
            margin: 32px 0;
        }
        
        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: #e2e8f0;
        }
        
        .divider span {
            color: #94a3b8;
            font-size: 13px;
            font-weight: 500;
        }
        
        .register-link {
            text-align: center;
            color: #64748b;
            font-size: 15px;
        }
        
        .register-link a {
            color: var(--green-500);
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s ease;
        }
        
        .register-link a:hover {
            color: var(--navy-800);
        }
        
        .alert {
            padding: 16px 18px;
            border-radius: 12px;
            margin-bottom: 24px;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .alert i {
            font-size: 18px;
        }
        
        .alert-danger {
            background: #fef2f2;
            border: 1px solid #fecaca;
            color: #dc2626;
        }
        
        .alert-success {
            background: #f0fdf4;
            border: 1px solid #bbf7d0;
            color: #16a34a;
        }
        
        .validation-message {
            color: #dc2626;
            font-size: 13px;
            margin-top: 6px;
        }
        
        /* Demo credentials box */
        .demo-box {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.08) 0%, rgba(52, 211, 153, 0.08) 100%);
            border: 1px solid rgba(16, 185, 129, 0.2);
            border-radius: 12px;
            padding: 16px;
            margin-bottom: 24px;
        }
        
        .demo-box h5 {
            font-size: 13px;
            font-weight: 600;
            color: var(--green-500);
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .demo-box p {
            font-size: 13px;
            color: #475569;
            margin: 0;
            line-height: 1.6;
        }
        
        .demo-box code {
            background: rgba(16, 185, 129, 0.15);
            color: var(--navy-800);
            padding: 2px 6px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: 600;
        }
        
        /* Responsive */
        @@media (max-width: 1199.98px) {
            .login-branding {
                padding: 48px;
            }
            
            .login-branding h1 {
                font-size: 40px;
            }
            
            .features {
                grid-template-columns: 1fr;
            }
        }
        
        @@media (max-width: 991.98px) {
            .login-branding {
                display: none;
            }
            
            .login-form-section {
                width: 100%;
            }
            
            .login-form-section::before {
                display: none;
            }
        }
        
        @@media (max-width: 575.98px) {
            .login-form-section {
                padding: 24px;
            }
            
            .login-header h2 {
                font-size: 24px;
            }
            
            .login-header .welcome-icon {
                width: 60px;
                height: 60px;
            }
            
            .login-header .welcome-icon i {
                font-size: 26px;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Left Side - Branding -->
        <div class="login-branding">
            <div class="bg-shapes">
                <div class="shape shape-1"></div>
                <div class="shape shape-2"></div>
                <div class="shape shape-3"></div>
            </div>
            
            <div class="brand-logo">
                <div class="brand-icon-wrapper">
                    <i class="fas fa-link"></i>
                </div>
                <span>B2B<span class="gradient">Procurement</span></span>
            </div>
            
            <h1>Tedarik Zincirini<br><span class="highlight">Güçlendirin</span></h1>
            <p>Teklif süreçlerinizi dijitalleştirin, tedarikçilerinizle güvenle bağlantı kurun ve satın alma operasyonlarınızı tek platformda yönetin.</p>
            
            <div class="features">
                <div class="feature-item">
                    <div class="feature-icon"><i class="fas fa-rocket"></i></div>
                    <div class="feature-content">
                        <h4>Hızlı RFQ</h4>
                        <p>Dakikalar içinde teklif talebi oluşturun</p>
                    </div>
                </div>
                <div class="feature-item">
                    <div class="feature-icon"><i class="fas fa-handshake"></i></div>
                    <div class="feature-content">
                        <h4>Güvenli Bağlantı</h4>
                        <p>Doğrulanmış tedarikçi ağı</p>
                    </div>
                </div>
                <div class="feature-item">
                    <div class="feature-icon"><i class="fas fa-chart-pie"></i></div>
                    <div class="feature-content">
                        <h4>Akıllı Analiz</h4>
                        <p>Veri odaklı satın alma kararları</p>
                    </div>
                </div>
                <div class="feature-item">
                    <div class="feature-icon"><i class="fas fa-shield-halved"></i></div>
                    <div class="feature-content">
                        <h4>Kurumsal Güvenlik</h4>
                        <p>Verileriniz güvende</p>
                    </div>
                </div>
            </div>
            
            <div class="stats">
                <div class="stat-item">
                    <h3>500+</h3>
                    <p>Aktif Şirket</p>
                </div>
                <div class="stat-item">
                    <h3>10K+</h3>
                    <p>Başarılı RFQ</p>
                </div>
                <div class="stat-item">
                    <h3>%35</h3>
                    <p>Maliyet Tasarrufu</p>
                </div>
            </div>
        </div>
        
        <!-- Right Side - Login Form -->
        <div class="login-form-section">
            <div class="login-form-wrapper">
                <div class="login-header">
                    <div class="welcome-icon">
                        <i class="fas fa-fingerprint"></i>
                    </div>
                    <h2>Hoş Geldiniz</h2>
                    <p>Hesabınıza güvenle giriş yapın</p>
                </div>
                
                <div class="demo-box">
                    <h5><i class="fas fa-lightbulb"></i> Demo Hesap</h5>
                    <p><code>admin@abc.com</code> / <code>Demo123!</code></p>
                </div>
                
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i>
                        <span>@TempData["SuccessMessage"]</span>
                    </div>
                }
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                @error.ErrorMessage
                            }
                        </span>
                    </div>
                }
                
                <form asp-action="Login" method="post">
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                    @Html.AntiForgeryToken()
                    
                    <div class="form-group">
                        <label class="form-label" for="email">E-posta Adresi</label>
                        <div class="input-group">
                            <i class="fas fa-at input-icon"></i>
                            <input type="email" class="form-control" id="email" name="Email" 
                                   placeholder="ornek@sirket.com" required autocomplete="email" />
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label" for="password">Şifre</label>
                        <div class="input-group">
                            <i class="fas fa-key input-icon"></i>
                            <input type="password" class="form-control" id="password" name="Password" 
                                   placeholder="••••••••" required autocomplete="current-password" />
                            <button type="button" class="password-toggle" onclick="togglePassword()">
                                <i class="fas fa-eye" id="toggleIcon"></i>
                            </button>
                        </div>
                    </div>
                    
                    <div class="form-options">
                        <div class="remember-me">
                            <input type="checkbox" id="rememberMe" name="RememberMe" value="true" />
                            <label for="rememberMe">Beni hatırla</label>
                        </div>
                        <a href="@Url.Action("ForgotPassword")" class="forgot-password">Şifremi unuttum</a>
                    </div>
                    
                    <button type="submit" class="btn-login">
                        <i class="fas fa-arrow-right-to-bracket"></i>
                        <span>Giriş Yap</span>
                    </button>
                </form>
                
                <div class="divider">
                    <span>veya</span>
                </div>
                
                <p class="register-link">
                    Hesabınız yok mu? <a href="@Url.Action("Register")">Ücretsiz Kayıt Olun</a>
                </p>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
        
        // Add subtle animation on input focus
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.style.transform = 'scale(1.02)';
            });
            input.addEventListener('blur', function() {
                this.parentElement.style.transform = 'scale(1)';
            });
        });
    </script>
</body>
</html>
